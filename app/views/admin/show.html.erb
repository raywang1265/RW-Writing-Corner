<h1>Admin View</h1>

<style>
  table {
    width: 100%;
    border-collapse: collapse;
    table-layout: fixed; /* Makes sure cells are equal width and wrap */
  }

  th, td {
    border: 1px solid #ccc;
    padding: 8px;
    word-wrap: break-word;
    white-space: normal;
    vertical-align: top;
  }

  th {
    background-color: #f4f4f4;
  }
</style>

<h2>Pieces Table</h2>
<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Title</th>
      <th>Form</th>
      <th>Date</th>
      <th>Text Source</th>
      <th>Image Source</th>
      <th>Created At</th>
      <th>Updated At</th>
      <th>Title URL</th>
    </tr>
  </thead>
  <tbody>
    <% @pieces.each do |piece| %>
      <tr>
        <td><%= piece.id %></td>
        <td><%= piece.title %></td>
        <td><%= piece.form %></td>
        <td><%= piece.date %></td>
        <td><%= piece.textsource %></td>
        <td><%= piece.imgsource %></td>
        <td><%= piece.created_at %></td>
        <td><%= piece.updated_at %></td>
        <td><%= piece.titleurl %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<h2>Subscribers Table</h2>
<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Email</th>
      <th>Created At</th>
      <th>Updated At</th>
    </tr>
  </thead>
  <tbody>
    <% @subscribers.each do |subscriber| %>
      <tr>
        <td><%= subscriber.id %></td>
        <td><%= subscriber.email %></td>
        <td><%= subscriber.created_at %></td>
        <td><%= subscriber.updated_at %></td>
      </tr>
    <% end %>
  </tbody>
</table>
